<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:elevation="10dp"
    android:radius="20dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@android:color/white">

        <!-- Tombol Hapus -->
        <Button
            android:id="@+id/btnHapusPesanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hapus Pesanan"
            android:backgroundTint="@color/red"
            android:textColor="@android:color/white"
            android:layout_gravity="right"
            android:layout_marginTop="12dp"
            android:visibility="gone"/>

        <!-- Order ID -->
        <TextView
            android:id="@+id/tvOrderId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ§¾ Order ID: "
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#03A9F4"
            android:layout_marginBottom="10dp" />

        <!-- Atas Nama -->
        <TextView
            android:id="@+id/tvNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ‘¤ Atas Nama:"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#222222" />

        <!-- Layanan -->
        <TextView
            android:id="@+id/tvLayanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ§º Layanan:"
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="2dp" />

        <!-- Tanggal -->
        <TextView
            android:id="@+id/tvTanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“… Tanggal:"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginTop="6dp" />

        <!-- Jam -->
        <TextView
            android:id="@+id/tvJam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â° Jam:"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginTop="2dp" />

        <!-- Lokasi -->
        <TextView
            android:id="@+id/tvLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Lokasi:"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginTop="6dp" />

        <!-- Catatan -->
        <TextView
            android:id="@+id/tvCatatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ“ Catatan:"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginTop="4dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp" />

        <!-- Status -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_label_status"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Status:"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Berat -->
        <TextView
            android:id="@+id/tvBerat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_label_berat"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Berat:"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <!-- Biaya -->
        <TextView
            android:id="@+id/tvBiaya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_label_biaya"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="Biaya:"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />


    </LinearLayout>
</androidx.cardview.widget.CardView>
