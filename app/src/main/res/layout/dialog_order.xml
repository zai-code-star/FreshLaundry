<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText android:id="@+id/etNama"
            android:hint="Nama Lengkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText android:id="@+id/etLokasi"
            android:hint="Lokasi Anda (koordinat)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_marginTop="12dp"/>
        <Button
            android:id="@+id/btnPilihLokasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Lokasi di Peta"
            android:layout_marginTop="8dp" />

        <Spinner android:id="@+id/spinnerJam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <EditText android:id="@+id/etCatatan"
            android:hint="Catatan (opsional)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"/>

        <Button android:id="@+id/btnKonfirmasi"
            android:text="Konfirmasi Order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>
